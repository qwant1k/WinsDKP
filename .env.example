# ============================================================
# Ymir Clan Hub — Environment Variables
# Copy to .env and fill in your values
# ============================================================

# ── General ──────────────────────────────────────────────────
NODE_ENV=development
TZ=Asia/Almaty
APP_PORT=3000
APP_URL=http://localhost:3000
WEB_URL=http://localhost:5173

# ── Database ─────────────────────────────────────────────────
DATABASE_URL=postgresql://ymir:ymir_secret@localhost:5432/ymir_clan_hub?schema=public
POSTGRES_USER=ymir
POSTGRES_PASSWORD=ymir_secret
POSTGRES_DB=ymir_clan_hub

# ── Redis ────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ── JWT ──────────────────────────────────────────────────────
JWT_ACCESS_SECRET=change-me-access-secret-min-32-chars!!
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=change-me-refresh-secret-min-32-chars!!
JWT_REFRESH_EXPIRES_IN=7d

# ── OAuth: Google ────────────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# ── OAuth: Discord ───────────────────────────────────────────
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_CALLBACK_URL=http://localhost:3000/api/v1/auth/discord/callback

# ── MinIO (S3) ───────────────────────────────────────────────
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=ymir-uploads
MINIO_USE_SSL=false

# ── Mail (Mailpit in dev) ───────────────────────────────────
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@ymir-clan-hub.local

# ── Auction defaults ────────────────────────────────────────
AUCTION_ANTI_SNIPER_SECONDS=20
AUCTION_ANTI_SNIPER_EXTEND_SECONDS=30

# ── Logging ──────────────────────────────────────────────────
LOG_LEVEL=debug
LOG_FORMAT=json
